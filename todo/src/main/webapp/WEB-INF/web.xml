<web-app xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
                        http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
						version="3.0">	
	<display-name id="DisplayName_1552754861721">Archetype Created Web Application</display-name>

	

	<!-- login servlet -->
	<servlet>
		<servlet-name>Login</servlet-name>
		<servlet-class>com.sagar.todo.LoginServlet</servlet-class>
	</servlet>
	<servlet>
		<description>
		</description>
		<display-name>IndexServlet</display-name>
		<servlet-name>IndexServlet</servlet-name>
		<servlet-class>com.sagar.todo.IndexServlet</servlet-class>
	</servlet>
	<servlet>
		<description>
		</description>
		<display-name>AddTodoServlet</display-name>
		<servlet-name>AddTodoServlet</servlet-name>
		<servlet-class>com.sagar.todo.AddTodoServlet</servlet-class>
	</servlet>
	<servlet>
		<description>
		</description>
		<display-name>SessionServlet</display-name>
		<servlet-name>SessionServlet</servlet-name>
		<servlet-class>com.sagar.todo.SessionServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>Login</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>IndexServlet</servlet-name>
		<url-pattern>/index</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>AddTodoServlet</servlet-name>
		<url-pattern>/add</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>SessionServlet</servlet-name>
		<url-pattern>/session_servlet</url-pattern>
	</servlet-mapping>
		
	
</web-app>
